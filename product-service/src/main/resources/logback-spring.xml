<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Enable Jansi for Windows support -->
    <property name="LOG_LEVEL_PATTERN"
              value="%highlight(%-5level)"/>

    <property name="CONSOLE_LOG_PATTERN"
              value="%d{HH:mm:ss.SSS} %highlight(%-5level) ${PID:- } --- [%15.15t] %cyan(%-40.40logger{39}) : %msg%n%ex"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi> <!-- Required on Windows to support colors -->
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>